<!--             android:layout_width="wrap_content" -->
<!--             android:layout_height="wrap_content"  -->
<!--             android:src="@drawable/notification_next"/> -->
        
        
<!--         <CheckBox -->
<!--             android:layout_width="wrap_content" -->
<!--             android:layout_height="wrap_content" /> -->
    </LinearLayout>
    

</RelativeLayout>